@model Console_core_project.Models.Todo

<h1>Todo Details</h1>

<dl class="row">
    <dt class="col-sm-2">
        Description
    </dt>
    <dd class="col-sm-10">
        @Model.Description
    </dd>
    <dt class="col-sm-2">
        Assignee
    </dt>
    <dd class="col-sm-10">
        @(Model.Assignee != null ? $"{Model.Assignee.FirstName} {Model.Assignee.LastName}" : "Unassigned")
    </dd>
    <dt class="col-sm-2">
        Done
    </dt>
    <dd class="col-sm-10">
        @(Model.Done ? "Yes" : "No")
    </dd>
</dl>

<div>
    <a asp-action="Index">Back to List</a>
</div>
