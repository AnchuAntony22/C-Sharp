@model Console_core_project.Models.Todo

<h1>Create Todo</h1>

@using (Html.BeginForm())
{
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Assignee.Id" class="control-label"></label>
        <select asp-for="Assignee.Id" asp-items="ViewBag.Assignees" class="form-control">
            <option value="">-- Select Assignee --</option>
        </select>
        <span asp-validation-for="Assignee.Id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>
