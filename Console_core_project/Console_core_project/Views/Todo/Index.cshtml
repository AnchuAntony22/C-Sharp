@model IEnumerable<Console_core_project.Models.Todo>

<h1>List of Todos</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Description</th>
            <th>Assignee</th>
            <th>Done</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var todo in Model)
        {
            <tr>
                <td>@todo.Id</td>
                <td>@todo.Description</td>
                <td>@(todo.Assignee != null ? $"{todo.Assignee.FirstName} {todo.Assignee.LastName}" : "Unassigned")</td>
                <td>@(todo.Done ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@todo.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@todo.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
